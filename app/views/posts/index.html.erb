<h1>投稿一覧</h1>


<%= form_for(@post) do |f| %>
	<div>
		タイトル：<%= f.text_field :title %>
	</div>
	<br>
	<div>
		本文：<%= f.text_area :body %>
	</div>
	<br>
	<div>
		<%= f.submit "投稿する"%>
	</div>

<% end %>



<% @posts.each do |post| %>
	

	<div>
		投稿者:<%= post.user.try(:name)%>
	</div>
	<h2>
		<%= link_to "#{post.title}", post_path(post) %>
	</h2>
	<div>本文:
		<%= post.body %>
	</div>
	<br>


	<div>
		<% if post.liked_by?(current_user) %>

		<%=link_to "いいね解除", post_likes_path(post), method: :delete %>
		<% else %>
		<%=link_to "いいね", post_likes_path(post), method: :post %>

		<% end %>
	</div>
	

<% end %>





